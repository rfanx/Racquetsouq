<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Racquet Souq</title>
    <link rel="stylesheet" href="/css/user/signupPage.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>

    <!-- Include Header -->
    <%- include('../layouts/user/header.ejs') %>

    <main class="main-content">
        <div class="signup-container">
            <div class="signup-form-container">
                <h2>Signup</h2>
                <p class="login-link">Already Have An Account, <a href="/login">Login</a></p>

                <form id="sign-form" class="signup-form" method="post" action="/signup">
                    <div class="form-group">
                        <div id="fstName-err" class="error-msg"></div>
                        <input type="text" id="firstName" name="firstName" placeholder=" " required>
                        <label for="firstName">First Name</label>
                    </div>

                    <div class="form-group">
                        <div id="lstName-err" class="error-msg"></div>
                        <input type="text" id="lastName" name="lastName" placeholder=" " required>
                        <label for="lastName">Last Name</label>
                    </div>

                    <div class="form-group">
                        <div id="email-err" class="error-msg"></div>
                        <input type="email" id="email" name="email" placeholder=" " required>
                        <label for="email">Email</label>
                    </div>

                    <div class="form-group">
                        <div id="phNo-err" class="error-msg"></div>
                        <input type="tel" id="phone" name="phone" placeholder=" " required>
                        <label for="phone">Phone</label>
                    </div>

                    <div class="form-group">
                        <div id="pass-err" class="error-msg"></div>
                        <input type="password" id="password" name="password" placeholder=" " required>
                        <label for="password">Password</label>
                        <i class="fas fa-eye-slash toggle-password"></i>
                    </div>

                    <div class="form-group">
                        <div id="cPass-err" class="error-msg"></div>
                        <input type="password" id="confirmPassword" name="confirmPassword" placeholder=" " required>
                        <label for="confirmPassword">Confirm Password</label>
                        <i class="fas fa-eye-slash toggle-password"></i>
                    </div>

                    <div class="terms-checkbox">
                        <input type="checkbox" id="terms" name="terms">
                        <label for="terms">I have read and agreed to the Terms of Service and Privacy Policy</label>
                    </div>

                    <button type="submit" class="create-account-btn">Create Account</button>
                </form>
            </div>
            <div class="signup-image">
                <img src="/images/smashPosition.jpg" alt="Badminton Player">
            </div>
        </div>
    </main>

    <!-- Include Footer -->
    <%- include('../layouts/user/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="/scripts/user/signupPage.js"></script>
</body>
</html>
